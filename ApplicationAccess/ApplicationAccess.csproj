<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Alastair Wyse</Authors>
    <Company />
    <Copyright>Copyright Â© Alastair Wyse 2021</Copyright>
    <PackageProjectUrl>https://github.com/alastairwyse/ApplicationAccess/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/alastairwyse/ApplicationAccess/</RepositoryUrl>
    <Description>Core and foundational classes which provide flexible and configurable user permission and authorization management for applications.</Description>
    <PackageReleaseNotes>First release.</PackageReleaseNotes>
    <PackageTags>application access authorization authorisation permission permissions user group users groups</PackageTags>
    <NoDefaultLaunchSettingsFile>true</NoDefaultLaunchSettingsFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <GenerateSerializationAssemblies>On</GenerateSerializationAssemblies>
    <DocumentationFile>.\ApplicationAccess.xml</DocumentationFile>
    <WarningLevel>5</WarningLevel>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <PlatformTarget>x64</PlatformTarget>
    <DocumentationFile>.\ApplicationAccess.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MoreComplexDataStructures" Version="1.9.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ApplicationAccess.Utilities\ApplicationAccess.Utilities.csproj" />
  </ItemGroup>

</Project>
