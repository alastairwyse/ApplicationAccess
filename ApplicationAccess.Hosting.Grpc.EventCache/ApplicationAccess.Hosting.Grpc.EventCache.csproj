<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>disable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <Authors>Alastair Wyse</Authors>
    <Company />
    <Description>Classes which host an ApplicationAccess TemporalEventBulkCachingNode as a gRPC service.</Description>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Dockerfile">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Grpc.AspNetCore" Version="2.71.0" />
    <PackageReference Include="Grpc.StatusProto" Version="2.71.0" />
    <PackageReference Include="Grpc.Tools" Version="2.72.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ApplicationAccess.Hosting.Grpc\ApplicationAccess.Hosting.Grpc.csproj" />
    <ProjectReference Include="..\ApplicationAccess.Hosting.Rest.EventCache\ApplicationAccess.Hosting.Rest.EventCache.csproj" />
    <ProjectReference Include="..\ApplicationAccess.Persistence\ApplicationAccess.Persistence.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="..\ApplicationAccess.Hosting.Grpc\Protos\event_cache_v1.proto" ProtoRoot="..\ApplicationAccess.Hosting.Grpc" Link="Protos\event_cache_v1.proto" GrpcServices="Server" />
  </ItemGroup>

</Project>
